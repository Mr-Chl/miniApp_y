 /* 浮动 */
._f_left { float: left; }
._f_right { float: right; }

/* 清除浮动  */
._clearfloat{zoom:1}
._clearfloat:after{display:block;clear:both;content:"";visibility:hidden;height:0} 


/* 定位属性  */
._relative { position: relative; }
._absolute { position: absolute; }
._block { display: block; }
._inline_block { display: inline-block; }
._hidden { display: none; }
._overflow_hidden { overflow: hidden; }
._visibility{ visibility:hidden; }
._opacity0{ opacity:0 !important; }
._opacity1{ opacity:1 !important; }
._center{text-align: center}
._tleft{text-align: left}


/* 弹性盒  */
._flex { display: flex; }
._flex_item_center { align-items: center; }
._flex_justify_center { justify-content: center; }
._flex_space_between { justify-content: space-between; }

/* 去除边框  */
button::after { border:none; }

/* 向内挤压  */
._border_box { box-sizing: border-box; }

/* 超出一省略 */
._ellipsis {overflow: hidden;white-space: nowrap;text-overflow: ellipsis;}



/* 标签默认样式  */
input:-webkit-input-placeholder {
  /* placeholder颜色 */
  color:#ccc;
  /* placeholder字体大小  */
  font-size: 200rpx;
}
