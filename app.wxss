/* 加号icon  */

._addicon:after{
    position:absolute;
    width:36rpx;
    height:6rpx;
    content:"";
    background:#ffa64c;
    left: 50%;
    top:50%;
    margin-left:-18rpx;
    margin-top:-3rpx;
}
._addicon:before{
    position:absolute;
    width:6rpx;
    height:36rpx;
    content:"";
    background:#ffa64c;
    left: 50%;
    top:50%;
    margin-left:-3rpx;
    margin-top:-18rpx;
}

._addiconGray:after{
    position:absolute;
    width:36rpx;
    height:6rpx;
    content:"";
    background:#bbbbbb;
    left: 50%;
    top:50%;
    margin-left:-18rpx;
    margin-top:-3rpx;
}
._addiconGray:before{
    position:absolute;
    width:6rpx;
    height:36rpx;
    content:"";
    background:#bbbbbb;
    left: 50%;
    top:50%;
    margin-left:-3rpx;
    margin-top:-18rpx;
}

/*closeIcon  */
._closeIcon{
    position: relative;
    width:36rpx;
    height:36rpx;
    display:inline-block;
    transform: rotate(45deg);
}
._closeIcon:after{
    position:absolute;
    width:36rpx;
    height:4rpx;
    content:"";
    background:#dadada;
    left: 50%;
    top:50%;
    margin-left:-18rpx;
    margin-top:-2rpx;
}
._closeIcon:before{
    position:absolute;
    width:4rpx;
    height:36rpx;
    content:"";
    background:#dadada;
    left: 50%;
    top:50%;
    margin-left:-2rpx;
    margin-top:-18rpx;
}
/* 下箭头 */
.downArrow{
    content:'';
    width: 18rpx;
    height:18rpx;
    margin:0 10rpx;
    border:2rpx solid transparent;
    display: inline-block;
    border-right-color: #656565;
    border-bottom-color: #656565;
    transform: rotate(45deg);
    vertical-align:8%;
}

