page{
    background:url(https://img.miyabaobei.com/d1/p5/2018/05/10/f6/28/f628931bf921e6390e8f5e469bbe23e4337766024.jpg);
}
.nav{
    width:100%;
    height:60px;
    display: flex;
    position: relative;
}
.nav view{
    flex:1;
    text-align: center;
}
.color{
    color: red;
}
.nav_line{
    position: absolute;
    left:10px;
    bottom:20px;
    width:70px;
    height:2px;
    background:red;
    transition: left 0.5s ease;
}
swiper{
    height: 500px;
}
.swiper_content{
    margin:0 10px;
    height: 500px;
    box-sizing: border-box;
    position: relative;
}
.swiper_content:after{
    width:10px;
    content:'';
    height: 500px;
    background: linear-gradient(to right, rgba(174,161,164,0.7) 20%, rgba(130,130,130,0.1) 70%, rgba(0,0,0,0));
    position: absolute;
    left:0;
    top:0;
}
swiper-item:before{
    width:603rpx;
    content:'';
    height: 30rpx;
    background: url(http://img.miyabaobei.com/d1/p5/2018/05/10/a0/dc/a0dc7538a3ef739095fc5ee92f610c64335984090.jpg);
    background-size: 100% 100%;
    position: absolute;
    left:18rpx;
    bottom:0rpx;
    z-index: 20;
}
.swiper_content image{
    width:100%;
    height:100%;
}