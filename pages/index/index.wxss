.swiper_wrap{
	height:70%;
	position:absolute;
	width:100%;
	top:0;
	bottom:0;
	left:0;
	right:0;
	margin:auto;
}
.swiper_item{
    transform: scale(0.65)
}

.swiper-container{
	height:70%;
	position:absolute;
	width:100%;
	top:0;
	bottom:0;
	left:0;
	right:0;
	margin:auto;
    overflow-y: scroll;
}
.swiper-wrapper{
    height: 100%;
    width:500%;
}
.swiper-slide{
    width:750rpx;
    height: 100%;
    display: inline-block;
	transform: translate3d(0px, 0px, -200px);
	-webkit-transform-style: preserve-3d;
    -moz-transform-style: preserve-3d;
    -ms-transform-style: preserve-3d;
    transform-style: preserve-3d;
    -webkit-flex-shrink: 0;
    -ms-flex: 0 0 auto;
    transform: translate3D(-20px);
    -webkit-transform-style: preserve-3d;
    -moz-transform-style: preserve-3d;
    -ms-transform-style: preserve-3d;
    transform-style: preserve-3d;
}




